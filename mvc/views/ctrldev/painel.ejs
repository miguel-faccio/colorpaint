<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo</title>
    <link rel="stylesheet" href="/styles/painel.css">
</head>

<body>
    <div class="container">
        <div class="sidebar">
            <div class="sidebar-header">
                <h2>Bem-vindo, <%= username %></h2>
            </div>
            <nav>
                <ul>
                    <li><a href="/admin">Painel</a></li>
                    <li><a href="/gallery">Galeria</a></li>
                    <li>
                        <form action="/logout" method="POST">
                            <button type="submit">Sair</button>
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="content">
            <div class="header">
                <h1>Painel Administrativo</h1>
                <div class="datetime">
                    <%= new Date().toLocaleString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %>
                </div>
            </div>
            <div class="section">
                <h2>Usuários</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome de Usuário</th>
                            <th>Email</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usuarios.forEach(usuario=> { %>
                            <tr>
                                <td><%= usuario.user_id %></td>
                                <td><%= usuario.username %></td>
                                <td><%= usuario.email %></td>
                                <td>
                                    <a href="/edit-user/<%= usuario.user_id %>"><button class="edit">Editar</button></a>
                                    <button type="button" onclick="apagar('<%= usuario.user_id %>','<%= usuario.username %>')"
                                        class="delete">Excluir</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="section">
                <h2>Desenhos</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuário ID</th>
                            <th>Nome do Desenho</th>
                            <th>Imagem</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% desenhos.forEach(desenho=> { %>
                            <tr>
                                <td><%= desenho.id %></td>
                                <td><%= desenho.usuarios_user_id %></td>
                                <td><%= desenho.drawing_name %></td>
                                <td><img src="<%= desenho.url_imagem %>" alt="Desenho" width="100"></td>
                                <td>
                                    <form action="/drawing/<%= desenho.id %>" method="POST" style="display:inline;"
                                        class="delete-form">
                                        <button type="submit" class="delete">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        async function apagar(id, username, email) {
            const dados = await fetch('http://localhost:3000/user/' + id, { method: 'DELETE' });
            const json = await dados.json();
            console.log(json); // Mensagem de confirmação ou erro no console
            location.reload(); // Recarrega a página após a exclusão
        }
    </script>
</body>

</html>
