<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galeria</title>
    <link rel="stylesheet" href="../css/gallery.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,400,0,0" />
    <link rel="shortcut icon" type="imagex/png" href="../images/logo.png">
</head>

<body>
    <div class="off-canvas">
        <video autoplay muted loop class="background-video">
            <source src="../videos/oceano.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="off-canvas-content">
            <button class="off-canvas-close">
                <span class="material-symbols-outlined">close</span>
            </button>
            <div class="profile">
                <h2>Perfil do Usu√°rio</h2>
                <div class="username">
                    <%= username %>
                </div>
                <form action="/logout" method="POST" style="display:inline;">
                    <button type="submit" class="off-canvas-button">Logoff</button>
                </form>
            </div>
        </div>
    </div>
    <div class="gallery-container">
        <header>
            <button class="profile-button">
                <span class="material-symbols-outlined">person</span>
            </button>
            <h1>Galeria de Desenhos</h1>

            <a class="draw-button" href="/home">
                <span class="material-symbols-outlined">brush</span>
                Desenhar
            </a>
        </header>
        <div class="gallery">
            <% if (desenhos && desenhos.length> 0) { %>
                <% desenhos.forEach(drawing=> { %>
                    <div class="gallery-item">
                        <img src="../images/upload/<%= drawing.drawing_data %>" alt="<%= drawing.drawing_name %>">
                        <div class="legend">
                            <p>
                                <%= drawing.drawing_name %>
                            </p>
                            <a href="../images/upload/<%= drawing.drawing_data %>"
                                download="<%= drawing.drawing_data %>">
                                <button class="save-button"><span class="material-symbols-outlined">save</span></button>
                            </a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>Nenhum desenho encontrado.</p>
                            <% } %>
        </div>
    </div>
    <script src="../js/gallery.js"></script>
</body>

</html>